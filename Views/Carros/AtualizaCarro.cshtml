@model CRUD1.Models.Carro
@{
    ViewData["Title"] = "Atualiza Carro";
}

<h2>Atualiza Carro</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizaCarro" method="post">
            <input type="hidden" asp-for="CarroId" />

            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
            </div>

            <div>
                <input type="submit" value="Atualizar" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-warning">Voltar</a>
            </div>
        </form>
    </div>
    
</div>