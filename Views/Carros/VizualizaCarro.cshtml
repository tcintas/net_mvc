@model CRUD1.Models.Carro
@{
    ViewData["Title"] = "Vizualiza Carro";
}

<h2>Vizualiza Carro</h2>

<div class="row">
    <div class="col-md-4">        
            
            <div class="form-group">
                <label asp-for="CarroId" class="control-label"></label>
                <input asp-for="CarroId" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" readonly/>
            </div>

            <div>
                <a asp-action="Index" class="btn btn-warning">Voltar</a>
            </div>
        
    </div>

</div>